        private void GetDateHeader()
        {
            DateTime date = DateTime.Today;
            lblTodayDate.Text = String.Format("{0:dddd, MMMM d, yyyy}", date).ToUpper();
            lblSecondDay.Text = String.Format("{0:dddd, MMMM d, yyyy}", date.AddDays(1)).ToUpper();
