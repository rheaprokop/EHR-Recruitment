            {
                txtInterviewDate.Text = "";
                txtInterviewDate.Text += day.ToString("dd/MM/yyyy");
                calInterviewDate.Visible = false;
                
            }
        }

        protected void InterviewDate_OnClick(object sender, ImageClickEventArgs e)
        {
